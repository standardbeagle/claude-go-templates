permission_set "go-standard" {
  description "Standard Go development permissions"
  category "development"
  
  permissions {
    "Read"
    "Write"
    "Edit"
    "MultiEdit"
    "Glob"
    "Grep"
    "LS"
    "Bash(git *)"
    "Bash(go *)"
    "Bash(gofmt *)"
    "Bash(goimports *)"
    "Bash(golangci-lint *)"
    "Bash(go mod *)"
    "Bash(go build *)"
    "Bash(go run *)"
    "Bash(go test *)"
    "Bash(go install *)"
    "Bash(go get *)"
    "Bash(mkdir *)"
    "Bash(cp *)"
    "Bash(mv *)"
    "Bash(chmod *)"
    "Bash(ls *)"
    "Bash(find *)"
    "Bash(grep *)"
    "Bash(cat *)"
    "Bash(head *)"
    "Bash(tail *)"
    "Bash(echo *)"
    "Bash(touch *)"
  }
}

